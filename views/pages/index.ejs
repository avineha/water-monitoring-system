<main>
  
  <div class="jumbotron">
    
    <table id="myTable" class="mdl-data-table" style="width:100%">

      <thead>
          <tr>
            <th>Device Name </th>
              <th>Device Status </th>
              <th>Device start Hour</th>
              <th>Device Start Min</th>
              <th>device Running Duration</th>
              
          </tr>
      </thead>
      <tbody>
        <% data.forEach(function(data) { %>
          <tr>
              <td><%= data.device_name %></td>
              <td><% if( data.device_status ==0) {%>
                <img src="reddot.png" width="20px" height="20px" alt="False" /> 
                
              <%
            }
