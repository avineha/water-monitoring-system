              <%} %>
              </td>
              <td><%= data.device_star_hour %> hr.</td>
              <td><%= data.device_star_min %> min</td>
              <td><%= data.device_running_feq %></td>
          </tr>
          <% }); %>
      </tbody>
  </table>
